<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f888888"
    android:orientation="vertical" >
        
        <TextView
            android:id="@+id/weatherforecast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:text="上海未来5天天气预报"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/forecast1"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="#4f000000"
            android:layout_marginLeft = "15dp"
            android:layout_marginTop = "15dp"
            android:layout_below="@+id/weatherforecast"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp" />

		<TextView
			android:id="@+id/forecast2"
			android:layout_width="120dp"
			android:layout_height="45dp"
			android:layout_below="@+id/forecast1"
			android:layout_marginTop="10dp"
			android:layout_marginLeft = "15dp"
			android:background="#4f000000"
			android:text=""	
			android:textColor="@android:color/white"
			android:textSize="14sp" />

		<TextView
			android:id="@+id/forecast3"
			android:layout_width="120dp"
			android:layout_height="45dp"
			android:layout_below="@+id/forecast2"
			android:layout_marginTop="10dp"
			android:layout_marginLeft = "15dp"
			android:background="#4f000000"
			android:text=""
			android:textColor="@android:color/white"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/forecast4"
			android:layout_width="120dp"
			android:layout_height="45dp"
			android:layout_below="@+id/forecast3"
			android:layout_marginTop="10dp"
			android:layout_marginLeft = "15dp"
			android:background="#4f000000"
			android:text=""
			android:textColor="@android:color/white"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/forecast5"
			android:layout_width="120dp"
			android:layout_height="45dp"
			android:layout_below="@+id/forecast4"
			android:layout_marginTop="10dp"
			android:layout_marginLeft = "15dp"
			android:background="#4f000000"
			android:text=""
			android:textColor="@android:color/white"
			android:textSize="14sp" />

		<ImageView
		    android:id="@+id/forecasticon1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/forecast1"
		    android:layout_toRightOf="@+id/forecast1"
		    android:src="@drawable/b_6" />
		<ImageView
		    android:id="@+id/forecasticon2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/forecast2"
		    android:layout_toRightOf="@+id/forecast2"
		    android:src="@drawable/b_6" />
		<ImageView
		    android:id="@+id/forecasticon3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/forecast3"
		    android:layout_toRightOf="@+id/forecast3"
		    android:src="@drawable/b_6" />
		<ImageView
		    android:id="@+id/forecasticon4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/forecast4"
		    android:layout_toRightOf="@+id/forecast4"
		    android:src="@drawable/b_6" />
		<ImageView
		    android:id="@+id/forecasticon5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/forecast5"
		    android:layout_toRightOf="@+id/forecast5"
		    android:src="@drawable/b_6" />
</RelativeLayout>