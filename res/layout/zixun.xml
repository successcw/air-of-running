<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f888888"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textzixun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/US"
        android:textColor="@android:color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/textzixun1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:autoLink="all"
        android:text="http://apps.who.int/iris/bitstream/10665/69477/3/WHO_SDE_PHE_OEH_06.02_chi.pdf"
        android:textColor="@android:color/white"
        android:textSize="15dp" />
	<ImageView
	    android:id="@+id/shvsus"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/shvsus" />
</LinearLayout>