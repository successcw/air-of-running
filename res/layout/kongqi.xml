<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4f888888" >

    <TextView
        android:id="@+id/shishitemprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:shadowColor="#ff000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="1°"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/aircondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/shishitemprature"
        android:text="雨加雪"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/temprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aircondition"
        android:layout_below="@+id/aircondition"
        android:text="1℃/3℃"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temprature"
        android:layout_alignLeft="@+id/temprature"
        android:text="西北风1级"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tempratureupdatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="今天00:00发布"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/weathericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aircondition"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/b_0" />

    <TextView
        android:id="@+id/SHconst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shishitemprature"
        android:layout_marginTop="16dp"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:text="美国上海领事馆"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/SHupdatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/SHconst"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:text="今天12点发布"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/SHAQIVALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SHupdatetime"
        android:gravity="center_horizontal"
        android:shadowColor="#ff000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/SHAQIVALUE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/SHAQIconst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/SHupdatetime"
        android:layout_marginLeft="5dp"
        android:text="空气质量指数(AQI)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/SHAQILEVEL"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SHupdatetime"
        android:layout_toRightOf="@+id/SHAQIVALUE"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="25dp"
        android:shadowColor="#ff000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="对敏感人群不健康"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="25dp" />
	<TextView
		android:id="@+id/PrimaryPollutant"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:gravity="left"
	    android:text="首要污染物： PM10"
	    android:layout_below="@+id/SHAQIVALUE"
	    android:textSize="15dp" />
	<TextView
	    android:id="@+id/AQIjianyi"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:gravity="left"
	    android:text=""
	    android:layout_below="@+id/PrimaryPollutant"
	    android:textSize="15dp" />

	<TextView
	    android:id="@+id/running"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="left"
	    android:layout_below="@+id/AQIjianyi"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="5dp"
	    android:textColor="@android:color/white"
	    android:textSize="15dp" />

